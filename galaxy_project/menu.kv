#:kivy 1.8.0
<MenuWidget>:
    canvas.before:
        Color:
            rgba:0,0,0,0.8
        Rectangle:
            size:self.size
    Label:
        font_name:"RESOURCES/fonts/Sackers-Gothic-Std-Light.ttf"
        font_size:"60dp"
        text:root.parent.menu_title
        pos_hint:{"center_x":0.5,"center_y":0.6}
        size_hint:(0.3,0.3)
    Button:
        text:root.parent.button_title
        font_name:"RESOURCES/fonts/Eurostile.ttf"
        font_size:"30dp"
        pos_hint:{"center_x":0.5,"center_y":0.4}
        on_press:root.parent.start(self)
        background_normal:""
        #agar ye nahi karenge to jo bhi colour hm daalenge wo grey se multiply ho jaayega
        background_color:1,0,0,1
        size_hint:(0.2,0.15)
    Button:
        text:"change background"
        font_name:"RESOURCES/fonts/Eurostile.ttf"
        font_size:"15dp"
        pos_hint:{"center_x":0.9,"center_y":0.1}
        background_normal:""
        background_color:0.9,0,0,0.8
        on_press:root.parent.change_background(self)
        size_hint:(0.15,0.1)
    Button:
        text:root.parent.difficulty
        font_name:"RESOURCES/fonts/Eurostile.ttf"
        font_size:"15dp"
        pos_hint:{"center_x":0.7,"center_y":0.1}
        background_normal:""
        background_color:0.9,0,0,0.8
        on_press:root.parent.change_difficulty(self)
        size_hint:(0.15,0.1)